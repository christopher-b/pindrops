{
	"lexicon": 1,
	"id": "app.pindrop.pin",
	"defs": {
		"main": {
			"type": "record",
			"record": {
				"type": "object",
				"required": ["lat", "lng", "label", "date"],
				"properties": {
					"lat": {
						"type": "string",
						"description": "Latitude in decimal degrees."
					},
					"lng": {
						"type": "string",
						"description": "Longitude in decimal degrees."
					},
					"label": {
						"type": "string",
						"minLength": 1,
						"maxLength": 255,
						"description": "Human-readable label for the pin."
					},
					"date": {
						"type": "string",
						"format": "datetime",
						"description": "ISO8601 UTC date-time"
					}
				}
			}
		}
	}
}
